{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": ".",
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": false,
    "lib": ["dom", "esnext"]
  },
  "exclude": [
    "node_modules"
  ]
}
